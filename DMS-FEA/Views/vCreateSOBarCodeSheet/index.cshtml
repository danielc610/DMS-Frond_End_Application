@using DMS_FEA.ViewModels
@model vmCreateSOBarCodeSheet

@{
    ViewBag.Title = "Create SO BarCode Sheet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/Validations.js"></script>

<br>
<h3>Please Enter SO Number(s)</h3>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">

            @using (Html.BeginForm("Generate", "vCreateSOBarCodeSheet", FormMethod.Post, new { @class = "form-horizontal", role = "form" , id = "createSOBarCodeForm"}))

            {
                // @Html.AntiForgeryToken()
                <h4>To create barcode sheet for one SO only, please enter the same number in both fields:</h4>
                <hr />
                // @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.SO_No_Start, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.SO_No_Start, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.SO_No_Start, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.SO_No_End, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.SO_No_End, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.SO_No_End, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Revision_No, new {@class = "col-md-3 control-label"})
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.Revision_No, new { @class = "form-control"})
                        @Html.ValidationMessageFor(m => m.Revision_No,"", new { @class = "text-danger"})
                    </div>

                </div>
                <div class="form-group">
                    <div class="col-md-offset-3 col-md-9">
                        <input type="submit" name="BtnSubmit" value="Create" class="btn btn-default" />
                        <input type="button" onclick="resetForm(createSOBarCodeForm)" value="Clear" class="btn btn-default" />
                        <a href="@Url.Action("Index", "Home")" class="btn btn-default">Cancel</a>

                    </div>
                </div>
                <div style="color:red">
                    @ViewBag.Message
                    <br>
                    <a href=@ViewBag.Link target="_blank">@ViewBag.Link</a>
                </div>
            }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
